<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextMediumStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">@dimen/text_padding_or_margin</item>
        <item name="android:textSize">@dimen/medium_font</item>
    </style>

    <style name="TextLargeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">@dimen/text_padding_or_margin</item>
        <item name="android:textSize">@dimen/large_font</item>
    </style>

    <style name="TextListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/large_font</item>
    </style>

    <style name="DetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>